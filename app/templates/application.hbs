	<div id="contact" class="container">
		<h3>Leave A Message <button class='hidden-btn' {{action 'toggleContactForm'}}>{{fa-icon 'comment-o'}}</button></h3>
		{{#if contactForm}}
		<form>
			<fieldset class='form-group'>
				<label for='email'>Your Email:</label>
				<input type='email' class='form-control' id='email' placeholder='Enter your email' />
				<small class="text-muted">I'll never share your email with anyone else.</small>
			</fieldset>
			<fieldset>
				<label for='message'>Your Message:</label>
				<textarea class='form-control' placeholder='Your message here...' id='message'></textarea>
			</fieldset>
			<br>
		    <button type="submit" class="btn btn-primary">Send</button>
		</form>
		{{/if}}
